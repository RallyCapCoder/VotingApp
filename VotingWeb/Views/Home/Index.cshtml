@{
    ViewBag.Title = "Home Page";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Success"]
    </div>
}
@if (TempData["AlreadyVoted"] != null)
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["AlreadyVoted"]
    </div>
}
<div class="jumbotron">
    <h1></h1>
    <p class="lead">Welcome to Votems Virtual Voting Center! Here you will be able to vote online and free of any hassle!</p>
    <p><a href="https://votem.com/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Getting started</h2>
        <p>
            Enable to vote you will need to register an account
        </p>
    </div>
</div>