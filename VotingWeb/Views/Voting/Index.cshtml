@using VotingApp.Models
@model VotingWeb.Models.VotingViewModel
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("Vote", "Voting"))
{
    @Html.HiddenFor(m => m.BallotId)
    <h1>Federal and State</h1>
    <h2>For Commander in Cream and Vice Ice</h2>
    <p>(Ranked Choice Voting (Instant Runoff))</p>
    <p>Rank candidates in order of choice. Mark your favorite candidate as first choice and then indicate your second and additional back-up choices in order of choice. You may rank as many candidates as you want.</p>
    <form>
        <div class="form-group">
            @for (int i = 0; i < Model.PresidentAndVicePres.Count; i++)
            {
                @Html.DisplayFor(m => m.PresidentAndVicePres[i].PrimeCanidate.Name, new {@class = "form-control",@name = "PresidentAndVicePres["+ i + "].PrimeCanidate.Name" })
                <br/>
                @Html.DisplayFor(m => m.PresidentAndVicePres[i].SubCanidate.Name, new {@class = "form-control", @name = "PresidentAndVicePres[" + i + "].SubCanidate.Name" })
                <br/>
                @Html.TextBoxFor(m => m.PresidentAndVicePres[i].Ranking, new {@class = "form-control", @name = "PresidentAndVicePres[" + i + "].Ranking" })
                @Html.HiddenFor(m => m.PresidentAndVicePres[i].PrimeCanidate.CanidateId,new { @name = "PresidentAndVicePres[" + i + "].PrimeCanidate.CanidateId" })
                @Html.HiddenFor(m => m.PresidentAndVicePres[i].SubCanidate.CanidateId, new { @name = "PresidentAndVicePres[" + i + "].SubCanidate.CanidateId" })
                @Html.HiddenFor(m => m.PresidentAndVicePres[i].RankingVoteItemId, new { @name = "PresidentAndVicePres[" + i + "].RankingVoteItemId" })
            }
        </div>
        
        <div class="form-group">
            <h2>For Chief Dairy Queen</h2>
            <p>UnExpired Term (Vote in One Oval)</p>
            <p>Shall Justice Mint C. Chip of the Supreme Court of the State of Ice Cream be retained in office for another term</p>
            <p>Fill in the oval before the word "YES" if you wish the offical to remain in office</p>
            <p>Fill in the oval before the word "NO" if you do not wish the offical to remain in the office</p>
            @Html.DisplayFor(m => m.SupremeCourt.Canidate.Name, new {@class = "form-control"})
            <br/>
            <label>Yes</label>
            @Html.CheckBoxFor(m => m.SupremeCourt.YesVote)
            <label>No</label>
            @Html.CheckBoxFor(m => m.SupremeCourt.NoVote)
            @Html.HiddenFor(m => m.SupremeCourt.SingleVoteTicketId)
        </div>
        
        
        
        <h2>For State Rep.District M & M</h2>
        <p>(Vote For Two)</p>
        <div class="form-group">
            @for (int i = 0; i < Model.StateRep.Count; i++)
            {
                @Html.DisplayFor(m => m.StateRep[i].Canidate.Name, new {@class = "form-control", @name = "StateRep[" + i + "].Canidate.Name" })
                @Html.CheckBoxFor(m => m.StateRep[i].VotedFor, new {@class = "checkbox", @name = "StateRep[" + i + "].VotedFor" })
                @Html.HiddenFor(m => m.StateRep[i].Canidate.CanidateId, new {@class = "form-control", @name = "StateRep[" + i + "].Canidate.CanidateId" })
                @Html.HiddenFor(m => m.StateRep[i].MultipleVoteItemId, new { @class = "form-control", @name = "StateRep[" + i + "].MultipleVoteItemId" })
            }

        </div>
 
        <h1>County</h1>
        <h2>Ballot Issue</h2>
        <h3>@Model.BallotIssue.Issue.OfficalName</h3>
        <h3>(Vote in one oval)</h3>
        <p>@Model.BallotIssue.Issue.Description</p>
        <p>@Model.BallotIssue.Issue.Subtext</p>
        <div class="form-group">
            <label>Yes</label>
            @Html.CheckBoxFor(m => m.BallotIssue.YesVote)
            <label>
                No
            </label>
            @Html.CheckBoxFor(m => m.BallotIssue.NoVote)
            @Html.HiddenFor(m => m.BallotIssue.Issue.VoteIssueId)
            @Html.HiddenFor(m => m.BallotIssue.SingleVoteTicketId)
        </div>
                   
        <button type="submit" class="btn-primary">Vote!</button>
    </form>
  
}